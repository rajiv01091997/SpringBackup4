<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
 
 
 <bean name="add" class="com.globallogic.model.Address">
 <property name="city" value="Kolkata" />
 <property name="state" value="W.B." />
 <property name="pin" value="712311" />
 </bean>
 
 
 <bean id="emp" class="com.globallogic.model.Employee">
 <property name="empId" value="100"></property>
 <property name="empName" value="Rajiv Yadav"></property>
 <property name="address" ref="add" />
 </bean>
 
 
 </beans>