<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
 <bean id="emp" class="com.globallogic.model.Employee" autowire="byName">
 
 </bean>
 
 
 
 <!-- 
 
GIVING TYPE IS NOT COMPULSORY IN CONSTRUCTOR-ARG TAGS when there is only 1 matching constructor which
matches with the nos of arguments

  -->
 <bean name="address" class="com.globallogic.model.Address">
 <constructor-arg value="Ballia" type="String"/>
 <constructor-arg value="UP" type="String"/>
 <constructor-arg value="277501" type="long"/>
 
 </bean>
 
 
 </beans>